 {% extends 'base.html.twig' %}
 
{% block title %}Hello siiir{% endblock %}

{% block body %}
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Nom</th>
        <th scope="col">Quantite</th>
        <th scope="col">Lien</th>
      </tr>
    </thead>
    {% for equipement in equipement %}
      <tbody>
        <tr class="table-active">
          <td>{{ equipement.Nom}}</td>
          <td>{{ equipement.Quantite}}</td>
          <td><a href="{{ path('app_eqp') }}" type="button" class="btn btn-dark">Plus d'info sur l'equipement</a></td> 
        </tr>
      </tbody>
    {% endfor %}
  </table>
{% endblock %}
